import pickle
import numpy as np

def load_model():
    with open("./models/route_model.pkl", "rb") as f:
        return pickle.load(f)

def predict_travel_time(route_length, traffic_conditions):
    """
    Predict travel time using pre-trained model.
    :param route_length: Length of the route (in meters).
    :param traffic_conditions: Numerical representation of traffic conditions.
    :return: Predicted travel time (in minutes).
    """
    model = load_model()
    features = np.array([[route_length, traffic_conditions]])
    return model.predict(features)[0]
